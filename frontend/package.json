{
  "name": "p2p-exchange",
  "productName": "P2P 交易所",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "p2p-test": "vite",
    "build": "tsc -b && vite build",
    "build:mainnet": "tsc -b && cross-env VITE_NETWORK=mainnet vite build",
    "build:polygon": "tsc -b && cross-env VITE_NETWORK=polygon vite build",
    "build:electron": "cross-env VITE_BASE=./ vite build",
    "preview": "vite preview",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:dev": "npm run dev:electron",
    "electron:build": "npm run build:electron && electron-builder --win --publish=never",
    "dist": "npm run electron:build"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^15.0.0",
    "@chainsafe/libp2p-yamux": "^5.0.0",
    "@libp2p/bootstrap": "^12.0.0",
    "@libp2p/gossipsub": "^15.0.0",
    "@libp2p/identify": "^4.0.0",
    "@libp2p/kad-dht": "^16.0.0",
    "@libp2p/tcp": "^7.0.3",
    "@libp2p/webrtc": "^6.0.0",
    "@libp2p/websockets": "^10.0.0",
    "dexie": "^4.3.0",
    "ethers": "^6.13.0",
    "libp2p": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uint8arrays": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "io.github.p2p-p2p.exchange",
    "productName": "P2P 交易所",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "zh-CN",
        "en-US"
      ],
      "shortcutName": "P2P 交易所"
    }
  }
}
