{
  "name": "p2p-exchange",
  "productName": "P2P 交易所",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:mainnet": "tsc -b && cross-env VITE_NETWORK=mainnet vite build",
    "build:polygon": "tsc -b && cross-env VITE_NETWORK=polygon vite build",
    "build:electron": "tsc -b && cross-env VITE_BASE=./ vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:electron && electron-builder --win",
    "dist": "npm run electron:build"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "io.github.p2p-p2p.exchange",
    "productName": "P2P 交易所",
    "directories": { "output": "release" },
    "files": ["dist/**", "electron/**"],
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["zh-CN", "en-US"],
      "shortcutName": "P2P 交易所"
    }
  }
}
